{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build",
        "commit": "git-cz",
        "commit:retry": "git-cz --retry",
        "dev": "yarn build && lerna run --parallel --stream dev",
        "clean": "lerna run clean",
        "lint": "lerna run lint",
        "release": "yarn build && lerna publish --conventional-commits",
        "type-check": "lerna run type-check",
        "uninstall": "lerna clean && rimraf ./node_modules"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && yarn type-check && yarn lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "yarn type-check && yarn lint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "repository": "git+https://github.com/vovaguguiev/react-sunbeam.git",
    "author": "Vova Guguiev <vladimir.guguiev@gmail.com>",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "commitizen": "^3.1.1",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^1.3.1",
        "lerna": "^3.13.1",
        "prettier": "^1.16.4",
        "pretty-quick": "^1.10.0",
        "rimraf": "^2.6.3"
    }
}
