{
    "name": "react-sunbeam",
    "version": "0.7.0",
    "description": "Spatial navigation and focus management for React",
    "main": "dist/cjs/index.js",
    "module": "dist/es/index.js",
    "types": "dist/es/index.d.ts",
    "repository": "git+https://github.com/wzrdzl/react-sunbeam.git",
    "author": "Vladimir Guguiev <vladimir.guguiev@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "yarn build:es && yarn build:cjs",
        "build:es": "tsc --outDir dist/es",
        "build:cjs": "tsc --outDir dist/cjs --module CommonJS",
        "clean": "rimraf dist",
        "dev": "concurrently 'yarn build:es --watch' 'yarn build:cjs --watch' -n ES2017,CommonJS -c cyan,magenta",
        "lint": "eslint ./src --ext .ts,.tsx",
        "prebuild": "npm run clean",
        "test": "jest",
        "type-check": "tsc --noEmit"
    },
    "devDependencies": {
        "@testing-library/react": "^9.1.4",
        "@types/jest": "^24.0.18",
        "@types/react": "^16.9.2",
        "@typescript-eslint/eslint-plugin": "^2.1.0",
        "@typescript-eslint/parser": "^2.1.0",
        "concurrently": "^4.1.2",
        "eslint": "^6.3.0",
        "eslint-config-prettier": "^6.2.0",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^2.0.1",
        "jest": "^24.9.0",
        "react": "^16.9.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.6.2"
    },
    "peerDependencies": {
        "react": "^16.9.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "dependencies": {
        "@types/nanoid": "^2.0.0",
        "nanoid": "^2.1.0"
    }
}
