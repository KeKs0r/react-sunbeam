{
    "name": "react-sunbeam",
    "version": "0.6.0",
    "description": "Spatial navigation and focus management for React",
    "main": "dist/cjs/index.js",
    "module": "dist/es/index.js",
    "types": "dist/es/index.d.ts",
    "repository": "git+https://github.com/wzrdzl/react-sunbeam.git",
    "author": "Vladimir Guguiev <vladimir.guguiev@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "yarn build:es && yarn build:cjs",
        "build:es": "tsc --outDir dist/es",
        "build:cjs": "tsc --outDir dist/cjs --module CommonJS",
        "clean": "rimraf dist",
        "dev": "concurrently 'yarn build:es --watch' 'yarn build:cjs --watch' -n ES2017,CommonJS -c cyan,magenta",
        "lint": "eslint ./src --ext .ts,.tsx",
        "prebuild": "npm run clean",
        "test": "jest",
        "type-check": "tsc --noEmit"
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/react": "^16.8.20",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.13.0",
        "eslint-plugin-react-hooks": "^1.6.0",
        "jest": "^24.8.0",
        "react": "^16.8.6",
        "react-testing-library": "^6.1.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.2"
    },
    "peerDependencies": {
        "react": "^16.8.6"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
